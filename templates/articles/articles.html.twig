{% extends 'base.html.twig' %}

{% block title_page %}Articles{% endblock %}

{% block body %}
    {% if articles is defined %}
            {% for article in articles %}
                <div class="row">
                    <div class="col s12 m6">
                        <div class="card blue-grey darken-1">
                            <div class="card-content white-text">
                                <span class="card-title">{{ article.article_title | e }}</span>
                                <p>{{ article.article_content | e}}</p>
                            </div>
                            <div class="card-action">
                                <a href="/?c=article&a=edit&id={{ article.id }}" id="edit">Editer</a>
                                <a href="/?c=article&a=delete&id={{ article.id }}">Supprimer</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
    {% endif %}
{% endblock %}
